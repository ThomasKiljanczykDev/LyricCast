<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/pb_gms_nearby_server_devices"
        style="@style/Widget.Material3.LinearProgressIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:indeterminate="true"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_gms_nearby_server_devices"
        app:layout_constraintEnd_toEndOf="@+id/rcv_gms_nearby_server_devices"
        app:layout_constraintStart_toStartOf="@+id/rcv_gms_nearby_server_devices"
        app:layout_constraintTop_toTopOf="@+id/rcv_gms_nearby_server_devices" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_gms_nearby_server_devices"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_session" />

</androidx.constraintlayout.widget.ConstraintLayout>